<div class="row">
  <div class="col-md-6 portfolio-item">
<% @studios.each do |studio| %>

<div class="container_slider">
  <ul id="slider">
          <div>
          <div id="budget_and_city">
          <%= studio.city %>     
          <p><%= Studio::BUDGETS[studio.budget].first %>
          </div>

          <div id="logo">

            <%if studio.logo%>
            <%= link_to (image_tag studio.logo_url(:thumb), class: 'image'), studio_path(studio.id)%>
            <%end%>

          </div>
        </div>

<% studio.projects.each do |project| %>  
  
  <% if studio.payed %>
    <li><%= link_to (image_tag project.image_url(:medium), class: 'image'), studio_path(project.studio_id) %></li>
    <% else %>
      <%= link_to (image_tag project.image_url(:thumb), class: 'image'), studio_path(project.studio_id) %>
  <% end %>

  </ul>

  <ul id="dots">   
    <li class="active"></li>
    <% num_of_dots = studio.projects.count-1 %>
    
    <% num_of_dots.times  do %>
    <li></li>
    <% end %>

  </ul>

  <button id="prev">Prev</button>
  <button id="next">Next</button>
<% end %>

 <% end %> 

 </div>
</div>